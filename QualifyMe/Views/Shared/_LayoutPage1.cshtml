@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>@ViewBag.Title - QualifyMe</title>
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")
    @Scripts.Render("~/Scripts/bootstrap")
</head>
<body>
    @if (Session["CurrentUserID"] != null)
    {
        <nav class="navbar navbar-expand-lg bg-white shadow-lg">


            <img src="~/images/qualifyme-logo.png" alt="logo" height="50" width="50" />

            <a class="navbar-brand" href="~/Home/index">
                QualifyMe
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">


                    <li class="nav-item">
                        <a class="nav-link" href="/home/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/home/homepage"><i class='fa fa-home'>Home</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/companies"><i class="fa fa-building">Companies</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/jobs/recommendedjobs"><i class="fa fa-tasks">Job</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/myapplications"><i class="fa fa-handshake-o">My Applications</i></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                            <img src="~/Images/user.png" width="20px" />
                            @Session["CurrentUserFirstName"]
                        </a>
                        <div class="dropdown-menu bg-info">
                            <a class="dropdown-item" href="/account/profile">View Profile</a>
                            <a class="dropdown-item" href="/account/#">Settings</a>
                            <a class="dropdown-item" href="/account/logout">Logout</a>
                        </div>
                    </li>

                </ul>
            </div>

        </nav>
    }
    @RenderBody()
    <hr />

</body>
</html>