@model QualifyMe.ViewModels.JobView

@{
    ViewBag.Title = "Create Job";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Create Job</h1>
        <form class="needs-validation" novalidate="novalidate" action="/jobs/create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="JobTitle">Job</label>
                    <textarea class="form-control" id="JobTitle" placeholder="Enter job title" name="JobTitle" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus"></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter question.
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="drpDepartments">Courses</label>
                    <select class="form-control" id="drpDepartments" name="DepartmentID" required="required">
                        <option value="">Please Select</option>
                        @foreach (var item in ViewBag.Departments)
                        {
                            <option value="@item.DepartmentID">@item.DepartmentName</option>
                        }
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Category can't be empty
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Job</button>
            @Html.ValidationSummary()
        </form>
    </div>
</div>

<script>
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event)
    {
        if ($(".needs-validation")[0].checkValidity() == false)
        {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }

</script>

