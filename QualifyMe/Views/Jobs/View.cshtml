@model QualifyMe.ViewModels.JobView

@{
    ViewBag.Title = "View Job";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 item-photo">
        </div>
        <div class="col-xs-5" style="border:0px solid gray">
            <h3>@Model.JobTitle</h3>
            <form method="get" action="/jobs/applyjob">


                <!-- Details -->
                <div class="section">
                    <h6 class="title-attr" style="margin-top:15px;"><small>Type</small></h6>
                    <div>
                        <div class="attr" style="width:50px; background-color: tomato">@Model.JobTypes</div>

                    </div>
                </div>
                <div class="section" style="padding-bottom:5px;">
                    <h6 class="title-attr"><small>Status</small></h6>
                    <div>
                        <div class="attr2">@Model.JobStatus</div>

                    </div>
                </div>
                <div class="section" style="padding-bottom:20px;">
                    <a href="/jobs/applyjob" class="btn btn-primary">Apply Job</a>
                </div>


                </form>
        </div>

        <div class="col-xs-9">
            <div style="width:100%;border-top:1px solid silver">
                <p style="padding:15px;">
                    <h5>Description</h5>
                    <small>
                        @Model.JobDescription
                    </small>
                </p>
                <small>
                    <h5>Qualification</h5>
                    @Model.JobQualification
                </small>
            </div>
        </div>
    </div>
</div>



<script>
    $(".editbutton").click(function () {
        $(this).parent().find(".needs-validation").show();
        $(this).hide();
        $(this).parent().find(".answer").hide();
    });
</script>

