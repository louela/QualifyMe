@model QualifyMe.ViewModels.JobView

@{
    ViewBag.Title = "View Job";
}

<div class="container">
    <div class="row">
        <div class="col-xs-4 item-photo">
        </div>
        <div class="col-xs-5" style="border:0px solid gray">
            <h3>@Model.JobTitle</h3>
            <strong>by: @Model.Company.CompanyName</strong>
            <form method="get" action="/jobs/applyjob">


                <!-- Details -->
                <div class="section">
                    <h6 class="title-attr" style="margin-top:15px;"><small>Type</small></h6>
                    <div>
                        <div class="attr" style="width:50px; background-color: tomato">@Model.JobTypes</div>

                    </div>
                    <h6 class="title-attr"><small>Status</small></h6>
                    <div>
                        <div class="attr2">@Model.JobStatus</div>
                    </div>
                </div>               
            </form>
        </div>

        <div class="col-xs-9">
            <div style="width:100%;border-top:1px solid silver">
                <p style="padding:15px;">
                    <h5>Description</h5>
                    <small>
                        @Model.JobDescription
                    </small>
                </p>
                <small>
                    <h5>Qualification</h5>
                    @Model.JobQualification
                </small>
            </div>
        </div>
    </div>
</div>

@if (Session["CurrentUsername"] != null)
{
    <h5>APPLICATION FORM</h5>
    <div class="container">
        <form novalidate="novalidate" action="/jobs/applyjob" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <input type="hidden" name="JobID" value="@Model.JobID" />
            <div class="row">
                <div class="col-25">
                    <label for="StudentName">Name</label>
                </div>
                <div class="col-75">
                    <input type="text" id="StudentName" name="StudentName" value="@Session["CurrentUserName"]" readonly>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="Email">Email</label>
                </div>
                <div class="col-75">
                    <input type="text" id="Email" name="Email" value="@Session["CurrentUserEmail"]" readonly>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="ApplicantBirthday">BirthDate</label>
                </div>
                <div class="col-75">
                    <input type="date" id="ApplicantBirthday" name="ApplicantBirthday" placeholder="Your Birthdate..">
                </div>
            </div>
           
          
            <div class="row">
                <div class="col-25">
                    <label for="ApplicantQuestion">Tell me something about yourself.</label>
                </div>
                <div class="col-75">
                    <textarea id="subject" name="ApplicantQuestion" placeholder="Write something.." style="height:200px"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="ApplicantAddress">Address</label>
                </div>
                <div class="col-75">
                    <input type="text" id="ApplicantAddress" name="ApplicantAddress" placeholder="Your Address..">
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Submit">
                @Html.ValidationSummary()
            </div>
        </form>
    </div>
}


<script>
    $(".editbutton").click(function () {
        $(this).parent().find(".needs-validation").show();
        $(this).hide();
        $(this).parent().find(".answer").hide();
    });
</script>
