            <div class="profile-side">
                <p class="mobile-no"><i class="fa fa-phone"></i> @Model.CompanyMobile</p>
                <p class="user-mail"><i class="fa fa-envelope"></i>@Model.Email</p>
                <div class="user-bio">
                    <h3>Bio</h3>
                    <p class="bio">
                        @Model.CompanyDescription
                    </p>
                </div>
                <div class="profile-btn">
                    <button class="followBtn" id="followBtn"> Follow</button>                 
