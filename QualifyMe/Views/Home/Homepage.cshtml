@model List<QualifyMe.ViewModels.JobView>
@{
    ViewBag.Title = "Homepage";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-blue-grey.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<section class="hero">
    <div class="background-image"></div>
    <div class="hero-content-area">
        <img src="~/Images/School/booth.jpg" alt="Forest" style="width:100%; height:20%">
    </div>
</section>
<div class="w3-container w3-content" style="max-width:1400px;margin-top:20px">
    <form class="example" action="/home/homepage">
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search Job Title..">
    </form>
    <!-- Right Column -->
    <div class="w3-col m2 ">
        <div class="w3-container w3-card w3-white w3-round w3-margin w3-padding-16">
            <p>Welcome Students!</p>
            <img src="~/Images/School/pic4.jpg" alt="Forest" style="width:100%;">
            <p><strong>"Take risks: If you win, you will be happy. If you lose, you will be wise." </strong></p>
        </div>
        <br>

        <!-- End Right Column -->

    </div>
    <table id="myTable">
        <div class="w3-col m8">
            <p> -AVAILABLE JOBS FOR YOU-</p>

            @foreach (var item in Model)
            {

                <div class="w3-container w3-card w3-white w3-round w3-margin ">
                    <br>
                    <img src="~/Images/avatar.png" alt="Avatar" class="w3-left w3-circle w3-margin-right" style="width:60px">
                    <span class="w3-right w3-opacity">@item.JobDateAndTime</span>
                    <span><h4><a>@item.Company.CompanyName</a></h4><br></span>
                    <hr class="w3-clear">
                    <h3>
                        <a href="/jobs/view/@item.JobID">@item.JobTitle</a>
                    </h3>
                    <p>@item.JobDescription</p>
                    <span class="w3-round" style="background-color: seagreen; color: white"><a>@item.Course.CourseName</a></span>
                    <span class="w3-round" style="background-color: tomato; color: white"><a>@item.JobTypes</a></span>
                    <p>Applicants: <strong>@item.ApplicantsCount</strong></p>

                </div>
            }

            <!-- End Middle Column -->
        </div>
    </table>
    <div class="w3-col m2">
        <div class="w3-container w3-card w3-white w3-round w3-margin w3-padding-1">
            <div class="w3-container">
                <p>Welcome Students!</p>
                <img src="~/Images/School/pic4.jpg" alt="Forest" style="width:100%;">
                <p><strong>"Take risks: If you win, you will be happy. If you lose, you will be wise." </strong></p>

            </div>
        </div>
        <br>

        <div class="w3-card w3-round w3-white w3-center w3-padding-16">
            <div class="w3-container">

                <img src="~/Images/School/landing.png" alt="Avatar" style="width:80%"><br>
                <span style=" color: forestgreen; font-style:oblique">View Virtual Exhibition!</span>
            </div>
        </div>
        <br>



        <!-- End Right Column -->

    </div>
</div>



<div class="container-fluid">
    <p class="copyright">&copy; 2022 <a href="#" target="_blank">QuailfyMe</a>. All Rights Reserved.</p>
</div>
