@model QualifyMe.ViewModels.StudentView
  
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Profile</title>

</head>
<body>
    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="~/AppFile/Images/Student/@Model.ImagePath" width="100" height="100" />
                    </div>
                   
                    <h5>
                        <b>@Session["CurrentUserFirstName"] @Session["CurrentUserLastName"]</b>
                    </h5>

                    <p>@Session["CurrentStudentCourse"]</p>
                    <h5><span style="color: white; position: center;"><a href="/account/changeprofile" class="btn btn-primary" style="background-color:forestgreen">Edit Profile</a></span></h5>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="container">
                            <strong>INFORMATION</strong>
                            <br />
                            <p>Student No : <strong>@Session["CurrentStudentID"]</strong></p>
                            <p>Email :<strong> @Session["CurrentUserEmail"]</strong></p>
                            <p>Gender :<strong>@Session["CurrentUserGender"]</strong></p>
                            <p>Mobile :<strong>@Session["CurrentUserMobile"]</strong></p>
                            <p>Address :<strong>@Session["CurrentUserAddress"]</strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

<script type="text/javascript">
    document.getElementById("myEdit").onclick = function () {
        location.href ="/account/changeprofile";
    };


</script>