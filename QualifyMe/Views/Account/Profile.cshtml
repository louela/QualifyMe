@model QualifyMe.ViewModels.StudentDetailsView
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
   
</head>
<body>
    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="~/Images/avatar.png" alt="" />
                        <div class="file btn btn-lg btn-primary">
                            Change Photo
                            <input type="file" name="file" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        <h5>
                            @Session["CurrentUserName"]
                        </h5>
                        <h6>
                            @Session["CurrentUserCourse"]
                        </h6>
                        <p class="proile-rating">Student ID : <span>@Session["CurrentStudentID"]</span></p>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                            </li>
                        </ul>
                    </div>
                    <a href="/account/changeprofile" class="btn-outline-secondary">Edit Profile</a>
                </div>
              
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-work">
                        <p>SKILLS</p>
                        <a href="">Web Designer</a><br />
                        <a href="">Web Developer</a><br />
                        <a href="">WordPress</a><br />
                        <a href="">WooCommerce</a><br />
                        <a href="">PHP, .Net</a><br />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="container">
                        <div class="row">
                            <div class="col-25">
                                <label for="StudentBirthday">Birthday:</label>
                            </div>
                            <div class="col-75">
                                <input type="text" id="StudentBirthday" name="StudentBirthday" value="@Model.StudentBirthday">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="StudentEmail">Email:</label>
                            </div>
                            <div class="col-75">
                                <input type="text" id="StudentEmail" name="StudentEmail" value="@Session["CurrentUserEmail"]" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="CourseID">Course:</label>
                            </div>
                            <div class="col-75">
                                <input type="text" id="CourseID" name="CourseID" value="@Session["CurrentStudentCourse"]" readonly>
                            </div>
                        </div>



                    </div>
                    @*<div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="col">
                                <div class="col-md-6">
                                    <label>Student ID</label>
                                </div>
                                <input class="col-6" readonly
                                   value="@Session["CurrentStudentID"]"
                             />
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Session["CurrentUserName"]</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Session["CurrentUserEmail"]</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Phone</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Session["CurrentUserMobile"]</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Course</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Session["CurrentUserCourse"]</p>
                                </div>
                            </div>
                        </div>
                       
                    </div>*@
                </div>
            </div>
        </form>
    </div>
</body>
</html>
<script type="text/javascript">
    document.getElementById("myEdit").onclick = function () {
        location.href ="/account/changeprofile";
    };
</script>