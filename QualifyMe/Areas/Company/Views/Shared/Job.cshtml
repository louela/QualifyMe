@model QualifyMe.ViewModels.JobView

<div class="col-sm-12">
    <div class="card">
        <div class="row">
            <div class="profile">
                <img src="~/images/avatar.png" alt="" height="50px" width="50px">
                <p>@Model.Company.CompanyName</p>
            </div>
            <div class="col-5 ">
                <a href="/company/jobs/view/@Model.JobID" class="text-primary">@Model.JobTitle</a>
                <p>@Model.JobDateAndTime</p>
            </div>
            <a href="/Company/Applicants/List/@Model.JobID">No. of Applicants</a>
            <h6>@Model.ApplicantsCount</h6>
            <table class="table">
                @*@foreach (var item in Model)
                {
                    Html.RenderPartial("Applicant", item);


                }*@

            </table>
        </div>       
    </div>
</div>




