

@model List<QualifyMe.ViewModels.JobView>

@{
    ViewBag.Title = "Jobs";
}

<div id="layoutSidenav_content">
<main>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-hover">
                <thead>
                <tr>
                    @*<th>ID</th>
                    <th>Views</th>*@
                    <th>Jobs</th>
                    <th>Company</th>
                    <th>Date Posted</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    @*<th>ID</th>
                    <th>Views</th>*@
                    <th>Jobs</th>
                    <th>Company</th>
                    <th>Date Posted</th>

                </tr>
                </tfoot>
                <tbody>
                <tr>
                    @foreach (var item in Model)
                    {
                        Html.RenderPartial("Job", item);
                    }
                </tr>


                </tbody>
            </table>
        </div>
    </div>
</main>
</div>

<script>
    $("a[href='/alljobs']").attr("id", "active");
</script>
